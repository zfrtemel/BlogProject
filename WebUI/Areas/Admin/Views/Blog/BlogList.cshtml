@model IEnumerable<EntityLayer.Concrete.Blog>

@{
    ViewBag.Title = "BlogList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row row-sm">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-header pb-0 pd-t-25">
                <div class="d-flex justify-content-between">
                    <h4 class="card-title mg-b-0">Blog Listesi</h4>
                </div>
                <p class="tx-12 text-muted mb-0">Example of Dashfox Simple Table. <a href="#">Learn more</a></p>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table text-md-nowrap" id="example1">
                        <thead>
                            <tr>
                                <th class="wd-15p border-bottom-0">Blog Adı</th>
                                <th class="wd-15p border-bottom-0">Yazar Adı</th>
                                <th class="wd-20p border-bottom-0">Kategori Adı</th>
                                <th class="wd-15p border-bottom-0">Blog Resmi</th>
                                <th class="wd-10p border-bottom-0">Blog Tarihi</th>
                                <th class="wd-10p border-bottom-0">Blog Durumu</th>
                                <th class="wd-25p border-bottom-0">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.BlogTitle)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Author.AuthorName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Category.CategoryName)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.BlogImage)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.BlogDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Status.StatusName)
                                </td>
                                <td>
                                    <a class="btn btn-danger" href="/Admin/Blog/BlogEdit/@item.BlogId">Düzenle  </a>
                                    <a class="btn btn-primary" href="/Home/BlogDetails/@item.BlogId">Detaya Git</a>
                                    <a class="btn btn-warning" href="/Admin/Blog/BlogDelete/@item.BlogId"> Sil</a>
                                </td>
                            </tr>
                            }


                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>