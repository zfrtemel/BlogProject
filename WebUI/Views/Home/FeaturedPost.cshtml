@model IEnumerable<EntityLayer.Concrete.Blog>
<section class="featured-post-area no-padding">

    <div class="row ts-gutter-20">
        <div class="col-lg-12 col-md-12 pad-r">
            <div id="featured-slider" class="owl-carousel owl-theme featured-slider">


                @foreach (var slider in Model)
                {
                    <div class="item post-overaly-style" style="background-image:url(/@slider.BlogImage)">
                        <div class="featured-post">
                            <a href="/Home/BlogDetails/@slider.BlogId" class="image-link">&nbsp;</a>
                            <div class="overlay-post-content">
                                <div class="post-content">
                                    <div class="grid-category">
                                        <a class="post-cat fashion" href="#">@slider.Category.CategoryName</a>
                                    </div>

                                    <h2 class="post-title title-lg">
                                        <a href="#">@slider.BlogTitle</a>
                                    </h2>
                                    <div class="post-meta">
                                        <ul>
                                            <li><a href="#"><i class="fa fa-user"></i> @slider.Author.AuthorName</a></li>
                                            <li><a href="#"><i class="icon icon-clock"></i> @(((DateTime)slider.BlogDate).ToString("dd/MMM/yyyy"))</a></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div><!--/ Featured post end -->
                    </div><!-- Item 1 end -->

                }



            </div><!-- Featured owl carousel end-->
        </div><!-- Col 7 end -->



    </div><!-- Row end -->

</section><!-- Feature post end -->
